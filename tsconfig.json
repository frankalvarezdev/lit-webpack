        "baseUrl": "./src",
        "outDir": "./dist/",
        "noImplicitAny": true,
        "target": "es6",
        "module": "esnext",
        "allowJs": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "sourceMap": true
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "./src/**/*"
    ]
}